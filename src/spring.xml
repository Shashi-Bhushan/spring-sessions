<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="triangle" class="com.shashi.shapes.Triangle" >
		<!-- Ref can point to an ID, NAME or ALIAS -->
		<property name="pointA" ref="zeroPoint"/>
		
		<!-- IdRef Bean -->
		<property name="pointB">
			<ref bean="point2"/>
		</property>
		
		<!-- Inner Bean -->
		<property name="pointC">
			<bean class="com.shashi.shapes.point.Point">
				<property name="x" value="20"/>
				<property name="y" value="0"/>
			</bean>
		</property>
	</bean>
	
	<!-- Can be referenced anywhere -->
	<bean id="zeroPoint" class="com.shashi.shapes.point.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="point2" class="com.shashi.shapes.point.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>
	</bean>
	
	<!-- ALIAS -->
	<alias name="triangle" alias="triangle-alias"/>
</beans>