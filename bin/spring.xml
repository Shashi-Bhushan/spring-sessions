<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<!-- 
	Global init and destroy methods for the whole beans scope.
	wherever specific init-method and destroy-method are not specified, these global init and destroy are called.
	
	for Eg.
	when their is a use case that your beans have a common name for their init and destroy methods then use this
 -->
<beans default-init-method="globalInit" default-destroy-method="globalCleanUp">
	<!-- 
		Bean Inheritance
		[
			creating one bean as abstract bean(by specifying the abstract attribute to true for the bean)
			other traingle beans will inherit from this 
		]
	 -->
	<bean id="parentTriangle" class="com.shashi.shapes.Triangle" abstract="true">
		<property name="points">
			<list>
				<ref bean="pointA"/>
			</list>
		</property>
	</bean>
	 
	 <!-- 
	 	Register customInit as Initialization Method for This Bean only
	 	Register customCleanUp as Destroy Method for This Bean only
	  -->
	<bean id="triangle1" class="com.shashi.shapes.Triangle" parent="parentTriangle" init-method="customInit" destroy-method="customCleanUp">
		<property name="points">
			<list>
				<!-- 
					default behaviour is to overwrite pointA reference of parentTriangle here
				 -->
				<ref bean="pointB"/>
				<ref bean="pointC"/>
			</list>
		</property>
	</bean>
	
	<!-- 
		no specific init and destroy method specified. Global ones are used for this bean
	 -->
	<bean id="triangle2" class="com.shashi.shapes.Triangle" parent="parentTriangle">
		<property name="points">
			<!-- 
				Merge=true - specifies that parentTriangle's List to be merged with this Bean's List, not overwrite it
			 -->
			<list merge="true">
				<ref bean="pointB"/>
				<ref bean="pointC"/>
			</list>
		</property>
	</bean>
	
	
	<!-- Can be referenced anywhere -->
	<bean id="pointA" class="com.shashi.shapes.point.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="pointB" class="com.shashi.shapes.point.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>
	</bean>
	<bean id="pointC" class="com.shashi.shapes.point.Point">
		<property name="x" value="0"/>
		<property name="y" value="20"/>
	</bean>
	
	<!-- 
		Registers the BeanPostProcessor in this xml file.
		PostProcessor won't wokr without it.
	 -->
	 <!-- THIS BEAN METHODS CREATED FOR EVERY NEW INSTANCIATION AND DESTRUCTION OF BEANS -->
	<bean class="com.shashi.postProcessor.ApplicationBeanPostProcessor"/>
	<!-- THIS BEAN CREATED AND FUNCTION CALLED WHEN BeanFactory IS INITIALIZED -->
	<bean class="com.shashi.postProcessor.ApplicationBeanFactoryPostProcessor"/>
	
	<!-- 
		Order of Execution :
			-> ApplicationBeanFactoryPostProcessor
			-> ApplicationBeanPostProcessor beforeInit (for every bean)
			-> Singleton beans created ( by looking in spring.xml file )
			-> ApplicationBeanPostProcessor afterInit (for every bean)
			-> Constructors called 	( <constructor-arg> )
			-> Setters called		( <property> )
	 -->
	
</beans>