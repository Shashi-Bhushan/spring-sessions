<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   	<context:annotation-config/>
	<!-- 
		we need to tell Spring to scan through not only this xml file for bean definitions here
		but also, in the code for @Component Annotation and Mark certain classes as Beans
		
		component-scan is the tag that does the work
	 -->
	<context:component-scan base-package="com.shashi"></context:component-scan> 
	 <!-- 
	 	instead of pointA, if the name would be 'center' i.e. same as propertyName 
	 	the Spring will inject bean named 'center' to setter of Circle class.
	 	
	 	but let's suppose i'm using this bean for multiple other references.
	 	in this case, i can't change the name of the bean.
	 	use QUALIFIER in this case.
	 	now, a Qualifier is something which i can mention in the bean to say that this bean is a circle related bean.
	  -->
	<bean id="pointA" class="com.shashi.shapes.point.Point">
		<qualifier value="circleRelated"></qualifier>
		<property name="x" value="${pointA.pointX}"/>
		<property name="y" value="${pointA.pointY}"/>
	</bean>
	
	<bean id="pointB" class="com.shashi.shapes.point.Point">
		<property name="x" value="${pointA.pointX}"/>
		<property name="y" value="${pointA.pointY}"/>
	</bean>
	
	<bean id="pointC" class="com.shashi.shapes.point.Point">
		<property name="x" value="${pointA.pointX}"/>
		<property name="y" value="${pointA.pointY}"/>
	</bean>
	
	 <!-- does the substitution before beanFactory is initialized -->
	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="locations" value="PropertiesPlaceholderConfig.properties"/>
	</bean>
</beans>
